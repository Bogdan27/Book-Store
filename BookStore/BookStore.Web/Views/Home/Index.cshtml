@model IEnumerable<BookStore.Core.Models.Book>


@{
    /**/

    ViewBag.Title = "Home Page";
}

<h1 align="center">Books</h1>

<div class="row d-flex justify-content-center">
    @foreach (var item in Model)
    {

        <div class="col-md-3" style="height:450px;width:250px;padding:10px;margin:10px;border: solid thin whitesmoke">
            <div class="col-md-12">
                <img class="img" style="height:250px" src="~/Content/BookImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <h4>@item.Price</h4>
            </div>
            <div class="col-md-12">
                <a href="#" class="btn btn-default">Add to Basket</a>
            </div>
        </div>
    }
</div>
<div class="col-md-12 clearfix" />




