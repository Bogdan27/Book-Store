@model BookStore.Core.ViewModels.BookListViewModel


@{
    /**/

    ViewBag.Title = "Home Page";
}

<h1 align="center">Books</h1>
<div class="row">
    <div class="col-md-2">
        <h4>Filter by Genre</h4>
        <div class="list-group">
            @Html.ActionLink("All", "Index", null, new { @class = Request["Genre"] == null ? "list-group-item active" : "list-group-item" })
            @foreach (var gen in Model.BookGenres)
            {
                @Html.ActionLink(gen.Genre, "Index", new { Genre = gen.Genre }, new { @class = Request["Genre"] == gen.Genre ? "list-group-item active" : "list-group-item" })
            }
        </div>
    </div>

    <div class="col-md-10">





        <div class="row d-flex justify-content-center">
            @foreach (var item in Model.Books)
            {

                <div class="col-md-3" style="height:450px;width:250px;padding:10px;margin:10px;border: solid thin whitesmoke">
                    <div class="col-md-12">
                        <img class="img" style="height:250px" src="~/Content/BookImages/@item.Image" />
                    </div>
                    <div class="col-md-12">
                        <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
                    </div>
                    <div class="col-md-12">
                        <p>@item.Author</p>
                    </div>
                    <div class="col-md-12">
                        <h4>@String.Format("{0:c}", item.Price)</h4>
                    </div>
                    <div class="col-md-12">
                        <a href="@Url.Action("AddToBasket", "Basket", new { Id=item.Id})" class="btn btn-default">Add to Basket</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="col-md-12 clearfix" />




